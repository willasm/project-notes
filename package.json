{
	"name": "project-notes",
	"displayName": "Project Notes + TODO Highlighter",
	"description": "Color Highlighted Comments with Links to Markdown File Notes",
	"publisher": "willasm",
	"author": {
		"name": "William McKeever"
	},
	"license": "MIT - SEE LICENSE IN LICENSE.md",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other",
		"Visualization",
		"Formatters",
		"Snippets"
	],
	"icon": "images/icon.png",
	"keywords": [
		"todo",
		"notes",
		"highlighter",
		"comments",
		"project",
		"markdown",
		"tasks",
		"organize"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:project-notes.openorcreatenote"
	],
	"bugs": {
		"url": "https://github.com/willasm/project-notes/issues",
		"email": "willmck63@gmail.com"
	},
	"homepage": "https://github.com/willasm/project-notes",
	"repository": {
		"type": "git",
		"url": "https://github.com/willasm/project-notes.git"
	},
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "project-notes.openorcreatenote",
				"title": "Project Notes: Open or Create Project Note"
			},
			{
				"command": "project-notes.notesedit",
				"title": "Project Notes: Open Existing Project Note (Edit Mode)"
			},
			{
				"command": "project-notes.notespreview",
				"title": "Project Notes: Open Existing Project Note (Preview Mode)"
			},
			{
				"command": "project-notes.setnotesglobalfolder",
				"title": "Project Notes: Set Globals Notes Folder Location"
			},
			{
				"command": "project-notes.openorcreateglobalnote",
				"title": "Project Notes: Open or Create Global Note"
			},
			{
				"command": "project-notes.notesglobaledit",
				"title": "Project Notes: Open Existing Global Note (Edit Mode)"
			},
			{
				"command": "project-notes.notesglobalpreview",
				"title": "Project Notes: Open Existing Global Note (Preview Mode)"
			},
			{
				"command": "project-notes.edit-settings-file",
				"title": "Project Notes: Edit Tags Settings File"
			},
			{
				"command": "project-notes.restore-settings-file",
				"title": "Project Notes: Restore Tag Settings File"
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "Project Notes",
				"properties": {
					"project-notes.globalNotesFolder": {
						"type": "string",
						"default": "",
						"description": "Folder Location for Global Notes"
					}
				}
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "project-notes-tag-settings.json",
				"url": "./src/tagSettings-schema.json"
			}
		],
		"snippets": [
			{
				"path": "./src/snippets/snippets.json.code-snippets"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	}
}